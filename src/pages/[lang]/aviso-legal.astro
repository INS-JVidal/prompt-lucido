---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { t, type Lang } from '../../i18n/utils';
import { ui } from '../../i18n/ui';

export function getStaticPaths() {
	return Object.keys(ui).map((lang) => ({ params: { lang } }));
}

const { lang } = Astro.params as { lang: Lang };
---

<BaseLayout title={`${t('legal.title', lang)} â€” ${t('site.title', lang)}`} lang={lang}>
	<section class="legal container--narrow">
		<h1 class="legal__title">{t('legal.title', lang)}</h1>

		<h2>{t('legal.owner.heading', lang)}</h2>
		<ul>
			<li>{t('legal.owner.name', lang)}</li>
			<li>{t('legal.owner.location', lang)}</li>
		</ul>

		<h2>{t('legal.purpose.heading', lang)}</h2>
		<p>{t('legal.purpose.text', lang)}</p>

		<h2>{t('legal.data.heading', lang)}</h2>
		<p>{t('legal.data.text', lang)}</p>

		<h2>{t('legal.ip.heading', lang)}</h2>
		<p>{t('legal.ip.text', lang)}</p>

		<h2>{t('legal.liability.heading', lang)}</h2>
		<p>{t('legal.liability.text', lang)}</p>
	</section>
</BaseLayout>

<style>
	.legal {
		padding: 3rem 0 4rem;
	}

	.legal__title {
		font-family: var(--font-heading);
		font-size: 2.25rem;
		font-weight: 700;
		letter-spacing: -0.02em;
		margin-bottom: 2rem;
	}

	.legal h2 {
		font-family: var(--font-heading);
		font-size: 1.25rem;
		font-weight: 600;
		margin-top: 2rem;
		margin-bottom: 0.75rem;
	}

	.legal p {
		font-family: var(--font-body);
		font-size: 1.05rem;
		line-height: 1.7;
		color: var(--text-secondary);
	}

	.legal ul {
		list-style: none;
		padding: 0;
		font-family: var(--font-body);
		font-size: 1.05rem;
		line-height: 1.9;
		color: var(--text-secondary);
	}

	@media (max-width: 768px) {
		.legal {
			padding: 2rem 0 3rem;
		}

		.legal__title {
			font-size: 1.75rem;
		}
	}
</style>
